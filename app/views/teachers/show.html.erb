
<div class="jumbotron">
<h1 class="display-4">
  <%= @teacher.name %>
</h1>

<p>
  <strong>Designation:</strong>
  Staff
</p>

<p>
  <strong>Phone:</strong>
  <%= @teacher.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @teacher.email %>
</p>

<div>
<h5>Student who are under your control:</h5>
</div>

<ul>
<% @studnets.each do |student| %>
    <% if student.staff == @teacher.name %>
      <li><%= student.name %></li>
    <% end %>
<% end %>
</ul>

<hr class="my-4">
<%= link_to 'Edit', edit_teacher_path(@teacher), class: 'btn btn-primary' %>
<%= link_to 'Back', teachers_path, class: 'btn btn-secondary' %>
</div>
