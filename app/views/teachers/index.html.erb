<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<%= link_to 'New Staff', new_teacher_path, class: 'btn btn-success' %>

<br />
<br />

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.phone %></td>
        <td><%= teacher.email %></td>
        <td><%= link_to 'Show', teacher,class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher), class: 'btn btn-success' %></td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>
