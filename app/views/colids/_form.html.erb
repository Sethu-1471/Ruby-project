<%= form_with(model: colid) do |form| %>
  <% if colid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(colid.errors.count, "error") %> prohibited this colid from being saved:</h2>

      <ul>
        <% colid.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name,  class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone,  class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email,  class: 'form-control' %>
  </div>


  <div class="field form-group">
    <%= form.label :Staff %>

    <% options = Array.new %>
    <% Teacher.all.each do |teacher| %>
      <% options.push(["#{teacher.id} - #{teacher.name}", teacher.name]) %>
    <% end %>

    <%= form.select :staff, options_for_select(options), {}, { class: 'form-control' } %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location,  class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success'  %>
  </div>
<% end %>
